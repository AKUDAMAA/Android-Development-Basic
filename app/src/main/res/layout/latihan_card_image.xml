<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivDestination"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:src="@drawable/swiss_destination"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/tvLocation"
                android:layout_below="@id/ivDestination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="basing"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:textSize="30sp"/>



            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvLocation"
                android:textSize="18sp"
                android:text="Amazing view can be enjoyed from above of refreshing city"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                />

                <ImageView
                    android:id="@+id/location"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                  android:src="@drawable/baseline_location_on_24"
                    android:layout_below="@id/description"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="17dp"/>
            <TextView
                android:id="@+id/desI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Switzerland"
                android:layout_below="@id/description"
                android:layout_toRightOf="@id/location"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:id="@+id/price"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:src="@drawable/baseline_price_check_24"
                android:layout_below="@id/description"
                android:layout_toRightOf="@+id/desI"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="17dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100 / Package"
                android:layout_below="@id/description"
                android:layout_toRightOf="@id/price"
                android:layout_marginTop="20dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/price"
                android:text="Plan to Trip Now"
                android:layout_marginTop="7dp"/>





        </RelativeLayout>






    </androidx.cardview.widget.CardView>

</RelativeLayout>