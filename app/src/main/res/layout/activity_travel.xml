<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TravelActivity">
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/swiss_destination"

        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Campground"
                android:textSize="27sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="25dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kanderstag, Switzerland"
                android:layout_marginLeft="27dp"
                android:textSize="18sp"
                android:textColor="#6E6B6A"


                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_star_24"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="20dp"

                />

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="41"
                android:textSize="25sp"
                android:layout_marginTop="24dp"
                />





        </LinearLayout>





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ibCall"
                android:layout_width="79dp"
                android:layout_height="75dp"
                android:background="@drawable/baseline_call_24"
                android:scaleType="centerCrop"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="25dp"
                />

            <ImageButton
                android:id="@+id/ibNavigate"
                android:layout_width="79dp"
                android:layout_height="75dp"
                android:background="@drawable/baseline_navigation_24"
                android:scaleType="centerCrop"
                android:layout_marginLeft="47dp"
                android:layout_marginTop="25dp"
                />
            <ImageButton
                android:id="@+id/ibShare"
                android:layout_width="79dp"
                android:layout_height="75dp"
                android:background="@drawable/baseline_share_24_blue"
                android:scaleType="centerCrop"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="25dp"
                />


        </LinearLayout>





    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="79dp"
                android:layout_height="75dp"
                 android:text="CALL"
                android:textSize="22sp"
                android:scaleType="centerCrop"
                android:layout_marginLeft="50dp"

                />

            <TextView
                android:layout_width="79dp"
                android:layout_height="75dp"
                android:text="ROUTE"
                android:textSize="22sp"
                android:scaleType="centerCrop"
                android:layout_marginLeft="47dp"

                />
            <TextView
                android:layout_width="79dp"
                android:layout_height="75dp"
               android:text="SHARE"
                android:textSize="22sp"
                android:scaleType="centerCrop"
                android:layout_marginLeft="35dp"

                />


        </LinearLayout>









    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
          android:text="@string/lorem"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"

           android:layout_marginBottom="20dp"
            />


    </LinearLayout>



</LinearLayout>